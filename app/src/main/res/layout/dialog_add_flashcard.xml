<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="#000000"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Flashcard"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/etNewTerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Term / Question"
            android:padding="12dp"
            android:background="@drawable/rounded_outline_black"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etNewDefinition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Definition / Answer"
            android:padding="12dp"
            android:background="@drawable/rounded_outline_black"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSaveFlashcard"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="SAVE"
            android:textStyle="bold"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            app:cornerRadius="27dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>