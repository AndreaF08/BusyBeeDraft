<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Course Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etEditInstructor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Instructor Name"
        android:inputType="textPersonName"
        android:importantForAutofill="no"
        android:background="@drawable/rounded_outline"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etEditSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:minHeight="48dp"
        android:hint="Schedule (e.g. Mon 9am)"
        android:inputType="text"
        android:importantForAutofill="no"
        android:background="@drawable/rounded_outline"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancelUpdate"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#757575" />

        <Button
            android:id="@+id/btnUpdateCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:backgroundTint="#FFD600"
            android:textColor="#000000"
            android:layout_marginStart="10dp" />
    </LinearLayout>
</LinearLayout>