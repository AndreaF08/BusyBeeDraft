<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/pop_card">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Course Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/etEditInstructor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Instructor Name"
        android:inputType="textPersonName"
        android:importantForAutofill="no"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/etEditSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Schedule (e.g. MON THU)"
        android:inputType="textCapCharacters"
        android:importantForAutofill="no"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnUpdateCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="UPDATE"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"/>
</LinearLayout>