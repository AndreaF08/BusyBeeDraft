<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New To-do"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <TextView android:text="To-do" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter to-do"
            android:padding="10dp"
            android:background="@drawable/rounded_outline_black"
            android:layout_marginBottom="15dp"
            android:importantForAutofill="no"
            android:inputType="text" />

        <TextView android:text="Label" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btnCustomLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Custom"
                android:backgroundTint="#FFD54F"
                android:textColor="#000000"
                android:layout_marginEnd="5dp"/>
            <Button
                android:id="@+id/btnCourseLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Course"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                app:strokeWidth="1dp"
                app:strokeColor="#000000"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/spLabel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_outline_black"
            android:layout_marginBottom="15dp"/>

        <TextView android:text="Priority" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spPriority"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"/>

        <TextView android:text="Description" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Enter a description"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/rounded_outline_black"
            android:layout_marginBottom="15dp"
            android:importantForAutofill="no"
            android:inputType="textMultiLine" />

        <TextView android:text="Deadline" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etDeadline"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Set Deadline"
                android:focusable="false"
                android:clickable="true"
                android:importantForAutofill="no"
                android:inputType="none" />
            <Button
                android:id="@+id/btnDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="ðŸ“…" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>